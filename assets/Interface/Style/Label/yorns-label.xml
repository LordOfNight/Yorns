<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles xmlns="http://nifty-gui.lessvoid.com/nifty-gui">

    <!-- just some text label default -->
    <style id="nifty-label" base="base-font">
        <attributes align="center" textLineHeight="23px" textMinHeight="23px"/>
        <effect>
            <onActive name="clip" post="false"/>
        </effect>
    </style>
    <style id="yorns-label-title">
    <attributes font="Interface/Fonts/PocketCalculatorMaior.fnt" color="#ffff"/>
  </style>
  <style id="yorns-label-text">
    <attributes font="Interface/Fonts/PocketCalculator.fnt" color="#ffff"/>
  </style>
  <style id="yorns-label-text-bright">
    <attributes font="Interface/Fonts/PocketCalculator.fnt" color="#00ff"/>
  </style>
  
  <style id="yorns-hud-text">
    <attributes font="Interface/Fonts/PocketCalculator.fnt" color="#0f0a"/>
  </style>
  
  <style id="yorns-hud-textanim">
    <attributes font="Interface/Fonts/PocketCalculator.fnt" color="#0f0f"/>
    <effect>
            <onActive name="move" timeType="exp" factor="1.5" direction="bottom" mode="in"
                       lenght="1000" inherit="true"/>
        </effect>
  </style>
    
</nifty-styles>
